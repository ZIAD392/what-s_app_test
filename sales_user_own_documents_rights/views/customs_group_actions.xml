<odoo>
    <data>
        <record model="ir.ui.menu" id="stock.all_picking">
            <field name="groups_id" eval="[(5,)]"/>
        </record>

        <record id="stock.all_picking" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[
                   (4,ref('sales_user_own_documents_rights.group_stock_project_coordinator')),
                   (4,ref('stock.group_stock_manager')),
                   (4,ref('stock.group_stock_user')),
                   ]"/>
        </record>

        <record id="mark_to_do_group" model="ir.ui.view">
            <field name="name">mark to do group</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_locked']" position="after">
                    <field name="is_coordinator" invisible="1"/>
                </xpath>
                <xpath expr="//button[@name='action_open_label_type']" position="attributes">
                     <attribute name="attrs">{'invisible': [('is_coordinator', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='button_scrap']" position="attributes">
                     <attribute name="attrs">{'invisible': [('is_coordinator', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>