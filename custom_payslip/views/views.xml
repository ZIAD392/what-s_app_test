<odoo>
  <data>
      <!-- Inherit Form View to Modify it -->
      <record id="custom_hr_payslip_form" model="ir.ui.view">
          <field name="name">custom hr payslip form</field>
          <field name="model">hr.payslip</field>
          <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='struct_id']" position="after">
                  <field name="bank" invisible="1"/>
                  <field name="account_number" invisible="1"/>
                  <field name="other_earnings" invisible="1"/>
                  <field name="deductions" invisible="1"/>
                  <field name="net_salary" invisible="1"/>
              </xpath>
          </field>
      </record>
      <record id="custom_hr_payslip_tree" model="ir.ui.view">
          <field name="name">custom hr payslip tree</field>
          <field name="model">hr.payslip</field>
          <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='struct_id']" position="after">
                  <field name="bank" invisible="1"/>
                  <field name="account_number" invisible="1"/>
                  <field name="other_earnings" invisible="1"/>
                  <field name="deductions" invisible="1"/>
                  <field name="net_salary" invisible="1"/>
              </xpath>
          </field>
      </record>
  </data>
</odoo>